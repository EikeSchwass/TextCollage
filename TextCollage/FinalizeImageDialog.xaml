<Window x:Class="TextCollage.FinalizeImageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FinalizeImageDialog" Height="360" Width="640" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Save" x:Name="SaveMenuItem" Click="SaveMenuItem_OnClick" />
            </MenuItem>
            <MenuItem Header="About">
                <MenuItem Header="Info" x:Name="InfoMenuItem" Click="InfoMenuItem_OnClick" />
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1" x:Name="FinalizeImageControlHostGrid" />
    </Grid>
</Window>